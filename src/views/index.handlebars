<div class="container">
  <div class="row mt-5"><h1>Products</h1></div>
  <div class="row mt-3">
    {{#if products.length}}
      {{#each products}}
        <div class="card m-2 p-0" style="width: 18rem;">
          <img src="http://via.placeholder.com/640x360" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">Category: {{this.category}}</p>
            <p class="card-text">{{this.description}}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: ${{this.price}}</li>
            <li class="list-group-item">Stock: {{this.stock}}</li>
          </ul>
        </div>
      {{/each}}
    {{else}}
      <p class="m-1">No products available</p>
    {{/if}}
  </div>
</div>
