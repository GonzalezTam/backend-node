<h1 class="mx-5 mt-5">Chat - 😏</h1>

<div class="mx-5 mt-5 mb-3">
    <i id="username" class="mx-3"></i> <input id="chatBox" class="mx-2" style="width: 20em" type="text" hidden>
</div>

{{#if messages.length}}
  <div id="history">
    {{#each messages}}
      <div class="container message mx-3"><span class="mx-4 small" style="color:lightgray">{{this.date}}</span><strong>[{{this.user}}]</strong>: {{this.message}}</div>
    {{/each}}
  </div>
{{else}}
  <div id="history"></div>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="chat.js"></script>
